woman(blackWidow).
man(america).
man(nightHawk).
human(X):- man(X).
human(X):- woman(X).

isRedHead(blackWidow).
wearsBlackBelt(blackWidow).

hasHalfFaceHood(america).
wearsBlue(america).
hasShield(america).
hasStar(america).
hasAOnHood(america).

isSleeveLess(nightHawk).
isSleeveLess(X) :- looksGood(X).

hasShortHair(nightHawk).
wearsWaistcoat(nightHawk).
hasWeaponOnBack(nightHawk).

isPainted(ground).
madeOfConcrete(ground).
madeOfConcrete(X) :- \+ human(X).

hasGloves(X) :- human(X).

looksGood(X) :- \+ wearsBlue(X).
hasLongHair(X) :- \+ hasShortHair(X).

